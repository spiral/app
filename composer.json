{
  "name": "spiral/app",
  "description": "Spiral Skeleton Application",
  "license": "MIT",
  "authors": [
    {
      "name": "Wolfy-J",
      "email": "wolfy.jd@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.2",
    "spiral/framework": "^2.0",
    "spiral/snapshots": "^1.0",
    "spiral/console": "^1.2",
    "spiral/jobs": "^2.0",
    "spiral/http": "^1.1",
    "spiral/cookies": "^1.0",
    "spiral/csrf": "^1.0",
    "spiral/router": "^1.1",
    "spiral/session": "^1.1",
    "spiral/roadrunner": "^1.4",
    "spiral/translator": "^1.2",
    "spiral/encrypter": "^1.1",
    "spiral/security": "^2.1",
    "spiral/validation": "^1.2",
    "spiral/filters": "^1.2",
    "spiral/database": "^2.3",
    "spiral/migrations": "^2.0",
    "spiral/monolog-bridge": "^1.0",
    "spiral/stempler-bridge": "^1.0",
    "spiral/dotenv-bridge": "^1.0",
    "spiral/nyholm-bridge": "^1.0",
    "spiral/scaffolder": "^2.0",
    "spiral/prototype": "^1.0",
    "cycle/orm": "^1.0",
    "cycle/proxy-factory": "^1.0",
    "cycle/annotated": "^2.0",
    "cycle/migrations": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5 || ^9.0"
  },
  "scripts": {
    "post-create-project-cmd": [
      "php -r \"copy('.env.sample', '.env');\"",
      "php app.php encrypt:key -m .env",
      "php app.php configure -vv",
      "spiral get-binary"
    ]
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "publish-cmd": "php app.php publish"
  }
}
