{
    "name": "spiral/app",
    "type": "project",
    "license": "MIT",
    "description": "Spiral Skeleton Application",
    "homepage": "https://spiral.dev",
    "support": {
        "issues": "https://github.com/spiral/app/issues",
        "source": "https://github.com/spiral/app"
    },
    "require": {
        "php": ">=8.1",
        "spiral/roadrunner-cli": "dev-feature/config-command as 2.0",
        "spiral/framework": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "qossmic/deptrac-shim": "^1.0",
        "spiral/testing": "^2.2",
        "symfony/var-dumper": "^6.1",
        "vimeo/psalm": "dev-master",
        "composer/composer": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "Installer\\": "installer"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "extra": {
        "publish-cmd": "php app.php publish"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "spiral/composer-publish-plugin": true
        }
    },
    "scripts": {
        "pre-install-cmd": "Installer\\Installer::install",
        "pre-update-cmd": "Installer\\Installer::install",
        "post-install-cmd": "Installer\\Configurator::configure",
        "post-update-cmd": "Installer\\Configurator::configure",
        "post-create-project-cmd": [
            "php app.php encrypt:key -m .env",
            "php app.php configure --quiet",
            "rr get-binary --quiet",
            "composer dump-autoload"
        ],
        "rr:download": "rr get-binary",
        "rr:download-protoc": "rr download-protoc-binary",
        "psalm:config": "psalm",
        "deptrack": [
            "deptrac analyze --report-uncovered"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
